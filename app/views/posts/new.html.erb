<h3>create a new post</h3>

<% if Current.user %>
<%= form_with model: @post, :html => {:class => "form"}, url: new_post_path do |f| %>
	<div class="form-group">
    <div class="form-group">
    	<%= f.label 'Content' %><br>
    	<%= f.text_area :post_content %>
    </div>
		<div class="form-group">
    	<%= f.label 'Upload a picture' %><br>
    	<%= f.file_field :image %>
    </div>
		</div>
		<div class="form-group">
		<%= f.submit 'submit' %>
		</div>
	<% end %>
	<% else %>
	<div class="alert alert-info" role="alert">
    Please sign in before you create a post
  </div>
<% end %>

<%= link_to 'back', posts_path %>
